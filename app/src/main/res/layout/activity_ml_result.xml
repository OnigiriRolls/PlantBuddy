<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    tools:context=".MlResult">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:contentDescription="@string/photo"
        android:gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="@string/this_flower_is"
        android:textFontWeight="500"
        android:textSize="15sp"
        app:drawableLeftCompat="@drawable/character_happy_small" />

    <TextView
        android:id="@+id/tGuesses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/distinct_accent"
        android:textFontWeight="500"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/lResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tGuesses"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:textAlignment="center" />

</RelativeLayout>