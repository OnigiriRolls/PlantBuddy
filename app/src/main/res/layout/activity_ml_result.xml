<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    tools:context=".MlResultActivity">

    <ImageView
        android:id="@+id/flowerImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/photo"
        android:gravity="center"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/iCharacter"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:contentDescription="@string/photo"
            android:src="@drawable/character_happy_small" />

        <TextView
            android:id="@+id/tTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/iCharacter"
            android:gravity="center"
            android:text="@string/this_flower_is"
            android:textFontWeight="500"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tBestResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/iCharacter"
            android:gravity="center"
            android:textFontWeight="700"
            android:textSize="17sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tGuesses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/distinct_accent"
        android:textFontWeight="500"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/lResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tGuesses"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:textAlignment="center" />

</RelativeLayout>